<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <gradient android:angle="0" android:startColor="#F7C206" android:endColor="#FFD12C"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <solid android:color="#F7C206"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <gradient android:angle="0" android:startColor="#FFD12C" android:endColor="#F7C206" />
        </shape>
    </item>
</selector>